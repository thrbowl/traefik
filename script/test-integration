#!/bin/bash
set -e

export SCRIPTDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
export DEST=.

TESTFLAGS="${TESTFLAGS} -test.timeout=30m -check.v"

if [ -n "$VERBOSE" ]; then
    TESTFLAGS="${TESTFLAGS} -v"
fi

cd integration
echo "Testing againstâ€¦"
docker version
CGO_ENABLED=0 go test $TESTFLAGS
